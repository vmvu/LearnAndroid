<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <View
        android:id="@+id/viewBG"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="#000"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"></View>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        app:theme="@style/Base.CardView"
        >

        <RelativeLayout
            android:id="@+id/viewGroupBG"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/backgroundColor_default">

            <LinearLayout
                android:id="@+id/viewTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTitle"
                    style="@style/bookItemStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#00218f"

                    android:textStyle="bold"
                    tools:text="Pro android 5" />

                <ImageView
                    android:id="@+id/imgViewPinTag"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_toRightOf="@id/tvTitle"
                    android:src="@drawable/ic_star_black_24dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvContent2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewTop"
                android:ellipsize="end"
                android:maxLines="2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="right"
                android:orientation="horizontal"
                android:padding="5dp"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/tvCreation_On"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:textSize="10dp"

                    tools:text="20-7-2017 10:20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="last    "
                    android:textSize="6dp" />

                <TextView
                    android:id="@+id/tvLastUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    tools:text="1-8-2017 9:00" />

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
